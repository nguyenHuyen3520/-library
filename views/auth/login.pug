extends ../layouts/common.pug
block content
	h1 LogIn

	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/auth/login", method="POST")
		.form-group
			label(for="email") Email
			input#email.form-control(type="text" , name="email" , value = values ? values.email : "")
		.form-group
			label(for="password") Password
			input#password.form-control(type="password" , name="password" , value = values ? values.password : "")
		button.btn.btn-primary LogIn
	p
		= 'If you do not have an account, click here to create a new account'
		span &nbsp
		a(href='/auth/create') New Account